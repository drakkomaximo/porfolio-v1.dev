---
import SocialPill from "./SocialPill.astro";
import WebsideIcon from "../components/icons/Webside.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
interface Props {
  title: string;
  description: string;
  company: {
    webside?: string;
    linkedin?: string;
  };
  date: string;
}

const { title, description, company, date } = Astro.props;
const { webside, linkedin } = company;
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-sky-800 dark:text-sky-200/80"
  >{date}</time
>
<h3 class="text-lg font-semibold text-yellow-800 dark:text-yellow-200 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal dark:text-gray-200 text-pretty">
  {description}
</p>
{
  company.webside && company.linkedin && (
    <nav class="flex gap-4 mt-8 flex-wrap">
      {webside && (
        <SocialPill href={webside}>
          <WebsideIcon class="size-4 md:size-6" />
          Website
        </SocialPill>
      )}
      {linkedin && (
        <SocialPill href={linkedin}>
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
      )}
    </nav>
  )
}
